{
  "name": "reactjs-oauth2-pkce-provider",
  "version": "1.0.0",
  "description": "An Auth Service Provider to manage the OAuth2 with PKCE workflow on ReactJS apps",
  "main": "dist/index.js",
  "repository": "https://github.com/marcosfreitas/reactjs-oauth2-pkce-provider",
  "author": "Marcos Freitas <marcosvsfreitas+github-react-component-repo@gmail.com>",
  "license": "GPLv3",
  "keywords": [
    "reactjs",
    "oauth2",
    "js-pkce"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --build",
    "format": "prettier --write \"{src,test}/**/*.{ts, tsx, json}\"",
    "lint": "eslint \"{src,test}/**/*.{ts, tsx, json}\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "dependencies": {
    "js-pkce": "^1.2.1",
    "react-router-dom": "^6.4.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "crypto-js": "^4.1.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.2",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "source-map-support": "^0.5.20",
    "ts-jest": "28.0.5",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/src/$1",
      "^@shared/(.*)$": "<rootDir>/src/shared/$1",
      "^@components/(.*)$": "<rootDir>/src/components/$1",
      "^@test/(.*)$": "<rootDir>/test/$1"
    }
  },
  "engines": {
    "node": ">=16"
  },
  "peerDependencies": {
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2"
  },
  "files": [
    "dist"
  ]
}
